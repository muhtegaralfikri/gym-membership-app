// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Konfigurasi Generator
generator client {
  provider = "prisma-client-js"
}

// 2. Konfigurasi Datasource (Database)
datasource db {
  provider = "postgresql" // Kita pakai Postgres (Neon)
  url      = env("DATABASE_URL")
}

// 3. Definisi Model (Skema Tabel)

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String // Akan di-hash (Bcrypt)
  phone     String?
  isActive  Boolean  @default(true)
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships   UserMembership[]
  transactions  Transaction[]
}

model Role {
  id    Int    @id @default(autoincrement()) // 1: Admin, 2: Member
  name  String @unique // "admin", "member"
  users User[]
}

model Package {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  features     Json? // Fitur paket (JSON)
  price        Decimal  @db.Decimal(10, 2)
  durationDays Int
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  memberships UserMembership[]
  transactions Transaction[]
}

model Transaction {
  id                     Int           @id @default(autoincrement())
  orderId                String        @unique // ID order (bisa dari Midtrans/custom)
  amount                 Decimal       @db.Decimal(10, 2)
  status                 PaymentStatus @default(pending)
  paymentGateway         String?       // "midtrans", dll.
  paymentGatewayResponse Json?         // Raw response
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  package   Package @relation(fields: [packageId], references: [id])
  packageId Int

  membership UserMembership? // Relasi 1-ke-1 opsional
}

// Tabel Kunci: Menyimpan histori membership user
model UserMembership {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  status    MembershipStatus @default(upcoming)

  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  package   Package @relation(fields: [packageId], references: [id])
  packageId Int
  
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId Int         @unique // 1 membership = 1 bukti bayar
}

// 4. Definisi Enum

enum PaymentStatus {
  pending
  success
  failed
}

enum MembershipStatus {
  upcoming // Dibeli saat paket lama masih aktif
  active   // Sedang berjalan
  expired  // Sudah lewat
}